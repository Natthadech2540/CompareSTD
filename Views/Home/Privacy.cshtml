@{
    ViewData["Title"] = "Privacy Policy";
    var fileData = ViewData["FileData"] as List<dynamic>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.dataTables.min.css" rel="stylesheet">

    <style>
        .table-wrapper {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding: 20px;
            background-color: #00d2d3;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .header-frame {
            display: inline-block;
            border: 3px solid #007b80;
            border-radius: 10px;
            padding: 10px 20px;
            background-color: #f8f9fa;
            color: #333;
            font-family: 'Arial', sans-serif;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            margin-bottom: 20px;
        }

        table th, table td {
            padding: 15px 20px;
            text-align: left;
        }

        table th {
            background-color: #007b80;
            color: white;
            font-weight: bold;
        }

        table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

        .dataTables_wrapper {
            margin-top: 40px;
            margin-bottom: 40px;
        }

    </style>
</head>
<body>
    <div class="container mt-0">
        <div class="header-container">
            <h1 class="header-frame">Data of File  <i class="fas fa-file" style="font-size: 40px;"></i></h1>
        </div>

        <div class="table-wrapper">
            <table id="dataTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        @if (fileData != null && fileData.Count > 0)
                        {
                            foreach (var key in ((IDictionary<string, object>)fileData[0]).Keys)
                            {
                                <th>@key</th>
                            }
                        }
                        else
                        {
                            <th>Column1</th>
                            <th>Column2</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (fileData != null)
                    {
                        foreach (var row in fileData)
                        {
                            <tr>
                                @foreach (var value in (IDictionary<string, object>)row)
                                {
                                    <td>@value.Value</td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    $(document).ready(function() {
        
        // Initialize DataTable
        $('#dataTable').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "lengthMenu": [10, 50, 100, 1000],
            "responsive": true,
            "language": {
                "lengthMenu": "แสดง _MENU_ แถวต่อหน้า",
                "zeroRecords": "ไม่พบข้อมูลที่ตรงกัน",
                "info": "แสดง _START_ ถึง _END_ จาก _TOTAL_ แถว",
                "infoEmpty": "ไม่มีข้อมูล",
                "infoFiltered": "(จากการกรอง _MAX_ รายการทั้งหมด)",
                "search": "ค้นหา:"
            },
            "initComplete": function(settings, json) {
                var table = $('#dataTable').DataTable(); // Get the DataTable instance
                var rowCount = table.rows().count(); // Get the number of rows

                if (rowCount > 0) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Data Loaded Successfully!',
                        text: 'Your table data has been loaded.',
                        allowOutsideClick: false,
                        showConfirmButton: true,
                        confirmButtonText: 'OK',
                        timer: 0
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Enable the upload button and radio buttons
                            $('#uploadDataButton').prop('disabled', false);
                            $('input[name="systemType"]').prop('disabled', false);
                        }
                    });
                } else {
                    @* Swal.fire({
                        icon: 'warning',
                        title: 'No Data Found!',
                        text: 'There is no data to display.',
                        allowOutsideClick: false,
                        showConfirmButton: true,
                        confirmButtonText: 'OK',
                        timer: 0
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Disable the upload button and radio buttons
                            $('#uploadDataButton').prop('disabled', true);
                        }
                    }); *@
                }
            }
        });
    });
</script>

</body>
</html>
