    // Template Compare
     function downloadExcel() {
        // แสดง Preloader
        document.getElementById("preloader").style.display = "flex";

        // เรียกใช้งาน API ด้วย fetch และดาวน์โหลดไฟล์
        fetch("@Url.Action("TemplateOHCost", "Home")", {
            method: "GET",
        })
        .then(response => response.blob()) // แปลงเป็นไฟล์
        .then(blob => {
            // สร้างลิงก์ดาวน์โหลด
            var link = document.createElement("a");
            link.href = URL.createObjectURL(blob);
            link.download = "TemplatePROC&OHCost.xlsx"; // ตั้งชื่อไฟล์ที่ดาวน์โหลด
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            // ซ่อน Preloader เมื่อโหลดเสร็จ
            document.getElementById("preloader").style.display = "none";
        })
        .catch(error => {
            console.error("Download error:", error);
            alert("เกิดข้อผิดพลาดในการดาวน์โหลดไฟล์");

            // ซ่อน Preloader หากมีข้อผิดพลาด
            document.getElementById("preloader").style.display = "none";
        });
    }

